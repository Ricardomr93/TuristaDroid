<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="icon">@color/icons</item>
        <item name="android:textColorPrimary">@color/ic_launcher_background</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:windowBackground">@drawable/background_app</item>
    </style>
    <!--Tema para el splash screen-->
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Tema para el Date Picker-->
<!--    <style name="AppTheme.datePickerTheme">-->
<!--        <item name="colorPrimaryDark">@color/primary_dark</item>-->
<!--    </style>-->

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>