<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/item_site"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="310dp"
                                                   android:background="@color/primary_light"
>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:fabSize="normal"
            android:src="@drawable/ic_ricflor_lupa_blanca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/btnViewSiteFloating"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="95dp"
            android:backgroundTint="@color/primary_dark" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"/>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" tools:layout_editor_absoluteY="43dp"
            tools:layout_editor_absoluteX="111dp">
        <TextView
                android:id="@+id/txtSiteName"
                android:layout_width="356dp"
                android:layout_height="23dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="32dp"
                android:layout_toEndOf="@id/imgSite"
                android:layout_toRightOf="@id/imgSite"
                android:gravity="center_vertical"
                android:lines="2"
                android:text="@string/site_name"
                android:textColor="@color/primary_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp"
                android:textAllCaps="true"/>
        <TextView
                android:id="@+id/txtSite2"
                android:layout_width="387dp"
                android:layout_height="19dp"
                android:text="@string/it_site" android:layout_marginStart="24dp"
                android:textColor="@color/secondary_text" android:layout_marginBottom="8dp"/>
        <ImageView
                android:id="@+id/imgSite"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:contentDescription="Icono"
                app:srcCompat="@drawable/ic_ricflor_add_photo"
                android:scaleType="centerCrop"/>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="72dp">

            <TextView
                    android:id="@+id/txtRatings2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="10" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp"
                    android:textSize="18sp" app:layout_constraintEnd_toStartOf="@+id/imageView"
                    android:layout_marginEnd="8dp" android:textStyle="bold"/>
            <TextView
                    android:id="@+id/txtDate2"
                    android:layout_width="132dp"
                    android:layout_height="21dp"
                    android:text="10/10/1010"
                    app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp" android:textSize="18sp"
                    app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="24dp"
                    android:textStyle="bold"/>
            <ImageView
                    android:layout_width="22dp"
                    android:layout_height="24dp" app:srcCompat="@drawable/ic_favoritos"
                    android:id="@+id/imageView"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="24dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>