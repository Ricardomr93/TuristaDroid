<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.SplashActivity">

    <ImageView
            android:layout_width="277dp"
            android:layout_height="254dp" app:srcCompat="@drawable/circlelogo"
            android:id="@+id/circlelogo"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.5"/>
    <ImageView
            android:layout_width="353dp"
            android:layout_height="367dp" app:srcCompat="@drawable/pointlogo" android:id="@+id/pointlogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.62"
            app:layout_constraintVertical_bias="0.538"/>
    <ImageView
            android:layout_width="213dp"
            android:layout_height="249dp" app:srcCompat="@drawable/builogo"
            android:id="@+id/buildlogo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.522"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:id="@+id/txtlogo"
            android:textSize="36sp"
            android:textColor="#FFA000"
            android:fontFamily="@font/russo_one" android:textAllCaps="true"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/circlelogo" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>