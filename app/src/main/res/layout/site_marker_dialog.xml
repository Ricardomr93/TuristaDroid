<?xml version="1.0" encoding="utf-8"?>
    <FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <RelativeLayout
            android:layout_width="179dp"
            android:layout_height="127dp"
            android:background="@color/white">


        <ImageView
                android:layout_width="match_parent"
                android:layout_height="66dp" app:srcCompat="@drawable/ic_ricflor_add_photo"
                android:id="@+id/imgmakerdialog"
                android:layout_marginTop="8dp" android:layout_alignParentEnd="true" android:layout_marginEnd="0dp"
                android:layout_alignParentStart="true" android:layout_marginStart="0dp"
                android:scaleType="centerCrop"/>
        <TextView
                android:text="example name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/txtmakerdialoname"
                android:layout_alignParentStart="true" android:layout_marginStart="2dp"
                android:layout_alignParentTop="true" android:layout_marginTop="79dp" android:textAllCaps="true"
                android:textStyle="bold" android:textColor="@color/ic_launcher_background"
                android:textAlignment="center"/>
        <TextView
                android:text="3.1"
                android:layout_width="64dp"
                android:layout_height="18dp" android:id="@+id/txtmakerdialograting"
                android:layout_alignParentStart="true"
                android:layout_marginStart="58dp" android:layout_alignParentBottom="true"
                android:layout_marginBottom="5dp" android:layout_marginTop="6dp"
                android:layout_below="@+id/txtmakerdialoname" android:layout_alignParentEnd="true"
                android:layout_marginEnd="29dp" android:textAlignment="textEnd"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="22dp" app:srcCompat="@drawable/ic_favoritos"
                android:layout_alignParentStart="true" android:layout_marginStart="150dp"
                android:layout_alignParentTop="true" android:layout_marginTop="101dp" android:id="@+id/imageView3"/>
    </RelativeLayout>
</FrameLayout>
