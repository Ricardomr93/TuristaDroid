<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SinginActivity">

    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextSinginUserName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:hint="@string/username"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editTextSinginName"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editTextSinginEmail"/>
    <ImageButton
            android:layout_width="224dp"
            android:layout_height="196dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/imageButtonSinginFoto"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="80dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="129dp" android:layout_marginEnd="130dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSinginName" android:scaleType="fitCenter"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editTextSinginName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageButtonSinginFoto"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:hint="@string/name" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSinginUserName"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/editTextSinginEmail"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editTextSinginUserName"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" android:hint="@string/email" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/editTextSinginPassword"/>
    <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/editTextSinginPassword"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editTextSinginEmail"
            android:hint="@string/password" android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toTopOf="@+id/buttonSinginSingin"/>
    <Button
            android:text="@string/singin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/buttonSinginSingin"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/editTextSinginPassword"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="156dp"
            android:onClick="singin"/>
</androidx.constraintlayout.widget.ConstraintLayout>