<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:id="@+id/item_site"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="300dp"
                                                   android:elevation="10dp"
                                                   android:background="@color/primary_light">

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            app:fabSize="normal"
            android:src="@drawable/ic_ricflor_lupa_blanca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" android:id="@+id/btnViewSiteFloating"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="140dp"
            android:backgroundTint="@color/primary_dark" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="32dp"/>
    <TextView
            android:id="@+id/txtSiteName"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:layout_toEndOf="@id/imgSite"
            android:layout_toRightOf="@id/imgSite"
            android:gravity="center_vertical"
            android:lines="2"
            android:text="@string/site_name"
            android:textColor="@color/secondary_text"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="24dp"
    />

    <ImageView
            android:id="@+id/imgSite"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:contentDescription="Icono"
            app:layout_constraintBottom_toTopOf="@+id/txtSite2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_ricflor_add_photo" android:layout_marginEnd="24dp"
            android:layout_marginStart="24dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>

    <TextView
            android:id="@+id/txtSite2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toTopOf="@+id/txtDate2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtSite"
            app:layout_constraintTop_toBottomOf="@+id/imgSite"/>
    <TextView
            android:id="@+id/txtRatings"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="4dp"
            android:text="@string/ratings"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/txtRatings2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtDate"/>
    <TextView
            android:id="@+id/txtDate"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="10dp"
            android:text="@string/date"
            app:layout_constraintBottom_toTopOf="@+id/txtRatings"
            app:layout_constraintEnd_toStartOf="@+id/txtDate2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtSite"/>
    <TextView
            android:id="@+id/txtRatings2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="4dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtRatings"
            app:layout_constraintTop_toBottomOf="@+id/txtDate2"/>
    <TextView
            android:id="@+id/txtSite"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="10dp"
            android:text="@string/site"
            app:layout_constraintBottom_toTopOf="@+id/txtDate"
            app:layout_constraintEnd_toStartOf="@+id/txtSite2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imgSite"/>
    <TextView
            android:id="@+id/txtDate2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="24dp"
            app:layout_constraintBottom_toTopOf="@+id/txtRatings2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txtDate"
            app:layout_constraintTop_toBottomOf="@+id/txtSite2"/>

</androidx.constraintlayout.widget.ConstraintLayout>